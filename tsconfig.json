{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@": ["./src"] // This mapping is relative to "baseUrl"
    }
  }
}
